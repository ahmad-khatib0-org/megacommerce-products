# Multi-stage build for Rust service
# Stage 1: Builder (musl for static linking)
FROM rust:alpine AS builder

WORKDIR /app

# Install build dependencies for Alpine
RUN apk add --no-cache musl-dev pkgconfig openssl-dev build-base postgresql-dev

# Copy source
COPY Cargo.toml Cargo.lock ./
COPY .sqlx ./.sqlx
COPY src ./src

# Build release binary (statically linked)
RUN cargo build --release --target x86_64-unknown-linux-musl && \
    strip target/x86_64-unknown-linux-musl/release/megacommerce-products

# Stage 2: Tiny runtime image
FROM alpine:latest

WORKDIR /app

# Install runtime dependencies ONLY
RUN apk add --no-cache libgcc postgresql-client curl ca-certificates

# Copy stripped binary from builder
COPY --from=builder /app/target/x86_64-unknown-linux-musl/release/megacommerce-products /usr/local/bin/
COPY config.yaml ./

EXPOSE 50053

CMD ["/usr/local/bin/megacommerce-products"]
